<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:meta="http://namespaces.zope.org/meta">

  <!-- forms directive at top level; contains "form" directives -->

  <meta:groupingDirective
      name="forms"
      namespace="http://pylonshq.com/pyramid_formish"
      schema="repoze.bfg.formish.zcml.IFormsDirective"
      handler="repoze.bfg.formish.zcml.FormsDirective"
      />

  <!-- form directive used in forms directive -->

  <meta:groupingDirective
      name="form"
      namespace="http://pylonshq.com/pyramid_formish"
      usedIn="repoze.bfg.formish.zcml.IFormsDirective"
      schema="repoze.bfg.formish.zcml.IFormInsideFormsDirective"
      handler="repoze.bfg.formish.zcml.FormDirective"
      />

  <!-- form directive at top level -->

  <meta:groupingDirective
      name="form"
      namespace="http://pylonshq.com/pyramid_formish"
      schema="repoze.bfg.formish.zcml.IFormDirective"
      handler="repoze.bfg.formish.zcml.FormDirective"
      />

  <!-- action directive used as subdirective of "form" and "forms->form" -->

  <meta:directive
      name="action"
      namespace="http://pylonshq.com/pyramid_formish"
      usedIn="repoze.bfg.formish.zcml.IFormDirective"
      schema="repoze.bfg.formish.zcml.IActionDirective"
      handler="repoze.bfg.formish.zcml.action"
      />

  <!-- add_template_path directive -->

  <meta:directive
      name="add_template_path"
      namespace="http://pylonshq.com/pyramid_formish"
      schema="repoze.bfg.formish.zcml.IAddTemplatePath"
      handler="repoze.bfg.formish.zcml.add_template_path"
      />

</configure>

